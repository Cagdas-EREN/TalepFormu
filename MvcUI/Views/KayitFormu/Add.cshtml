@model Entities.Concrete.KisiselBilgiler
@{
    ViewData["Title"] = "Başvuru Formu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Başvuru Formu</h1>

@{
    ViewData["Title"] = "Kayıt Ekranı";
}

